<% provide(:title, @user.name) %>
<div>
  <h1>
    <%= gravatar_for @user %>
    <%= @user.name %>
  </h1>
</div>
<div class="col-md-8">
  <% if @user.posts.any? %>
    <h3>post (<%= @user.posts.count %>)</h3>
    <ol class="microposts">
      <%= render @posts %>
    </ol>
    <%= @post %>
  <% end %>
</div>
